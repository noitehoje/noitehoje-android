<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/mainLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/mainbg">
	<com.markupartist.android.widget.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" >
	</com.markupartist.android.widget.ActionBar>
	<ListView android:id="@+id/listEvents"
		android:layout_below="@+id/actionbar"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:clickable="true"
		/>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@drawable/splashscreen"
		android:id="@+id/splashLayout" xmlns:android="http://schemas.android.com/apk/res/android"
		android:visibility="gone" />
</RelativeLayout>
